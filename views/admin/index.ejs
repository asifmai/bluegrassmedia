                        <section id="headerform">
                            <form action="/admin/headerinfo" method="POST" data-parsley-validate>
                                <div class="row m-t-25">
                                    <div class="col">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong>Hero</strong> Section
                                            </div>
                                            <div class="card-body card-block">
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="headerline1" class=" form-control-label">Hero Title
                                                            Line 1</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="headerline1" name="headerline1"
                                                            class="form-control"
                                                            value="<%= staticcontent.headerline1 %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="headerline2" class=" form-control-label">Hero Title
                                                            Line 2</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="headerline2" name="headerline2"
                                                            class="form-control"
                                                            value="<%= staticcontent.headerline2 %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="headertext" class=" form-control-label">Hero
                                                            Text</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <textarea name="headertext" id="headertext" rows="3"
                                                            class="form-control"><%= staticcontent.headertext %>
                                                    </textarea>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Save
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </section>
                        <section id="portfolioform">
                            <form action="/admin/portfolioinfo" method="POST" data-parsley-validate>
                                <div class="row m-t-25">
                                    <div class="col">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong>Portfolio</strong> Section
                                            </div>
                                            <div class="card-body card-block">
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="portfoliotitle"
                                                            class=" form-control-label">Portfolio
                                                            Title</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="portfoliotitle" name="portfoliotitle"
                                                            class="form-control"
                                                            value="<%= staticcontent.portfoliotitle %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="portfolioheader"
                                                            class=" form-control-label">Portfolio
                                                            Header</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="portfolioheader" name="portfolioheader"
                                                            class="form-control"
                                                            value="<%= staticcontent.portfolioheader %>">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Save
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </section>
                        <section id="contactusform">
                            <form action="/admin/contactinfo" method="POST" data-parsley-validate>
                                <div class="row m-t-25">
                                    <div class="col">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong>Contact Us</strong> Section
                                            </div>
                                            <div class="card-body card-block">
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="contactheader"
                                                            class=" form-control-label">Header</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="contactheader" name="contactheader"
                                                            class="form-control"
                                                            value="<%= staticcontent.contactheader %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="contacttext"
                                                            class=" form-control-label">Text</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <textarea name="contacttext" id="contacttext" rows="3"
                                                            class="form-control"><%= staticcontent.contacttext %>
                                                    </textarea>
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="contactaddress"
                                                            class=" form-control-label">Address</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="contactaddress" name="contactaddress"
                                                            class="form-control"
                                                            value="<%= staticcontent.contactaddress %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="contactphone"
                                                            class=" form-control-label">Phone</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="contactphone" name="contactphone"
                                                            class="form-control"
                                                            value="<%= staticcontent.contactphone %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="contactemail"
                                                            class=" form-control-label">Email</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="contactemail" name="contactemail"
                                                            class="form-control"
                                                            value="<%= staticcontent.contactemail %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="contactskype"
                                                            class=" form-control-label">Skype</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="contactskype" name="contactskype"
                                                            class="form-control"
                                                            value="<%= staticcontent.contactskype %>">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Save
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </section>
                        <section id="helpform">
                            <form action="/admin/addhelpitem" method="POST" data-parsley-validate>
                                <div class="row m-t-25">
                                    <div class="col">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong>How Can we Help</strong> Section
                                            </div>
                                            <div class="card-body card-block">
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="" class=" form-control-label">How Can We
                                                            Help</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <div class="input-group mb-3">
                                                            <input type="text" class="form-control" id="input-addhelp"
                                                                required name="helpitem">
                                                            <div class="input-group-append">
                                                                <button class="btn btn-outline-primary btn-addhelp"
                                                                    href="#" type="submit"><i class="fa fa-plus"
                                                                        aria-hidden="true"></i></button>
                                                            </div>
                                                        </div>
                                                        <div class="help-items">
                                                            <% for (var i = 0; i < helpitems.length; i++) { %>
                                                            <div class="help-item">
                                                                <span><%= helpitems[i].text %></span>
                                                                <a href="/admin/deletehelpitem/<%= helpitems[i]._id %>"
                                                                    class="text-danger">
                                                                    <i class="fas fa-trash    "></i>
                                                                </a>
                                                            </div>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </section>
                        <section id="footerform">
                            <form action="/admin/footerinfo" method="POST" data-parsley-validate>
                                <div class="row m-t-25">
                                    <div class="col">
                                        <div class="card">
                                            <div class="card-header">
                                                <strong>Footer</strong> Section
                                            </div>
                                            <div class="card-body card-block">
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="footertext" class=" form-control-label">Footer
                                                            Text</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="footertext" name="footertext"
                                                            class="form-control"
                                                            value="<%= staticcontent.footertext %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="facebookurl" class=" form-control-label">Facebook
                                                            URL</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="facebookurl" name="facebookurl"
                                                            class="form-control"
                                                            value="<%= staticcontent.facebookurl %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="twitterurl" class=" form-control-label">Twitter
                                                            URL</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="twitterurl" name="twitterurl"
                                                            class="form-control"
                                                            value="<%= staticcontent.twitterurl %>">
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col col-md-3">
                                                        <label for="instagramurl" class=" form-control-label">Instagram
                                                            URL</label>
                                                    </div>
                                                    <div class="col-12 col-md-9">
                                                        <input type="text" id="instagramurl" name="instagramurl"
                                                            class="form-control"
                                                            value="<%= staticcontent.instagramurl %>">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Save
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </section>
                        <div class="row">
                            <div class="col-md-12">
                                <% include partials/footer %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>
    <% include partials/commonscripts %>
</body>

