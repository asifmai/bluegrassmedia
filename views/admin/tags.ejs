<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/commonhead %>
</head>

<body>
  <div class="page-wrapper">
    <!-- HEADER MOBILE-->
    <% include partials/headermobile %>
    <!-- END HEADER MOBILE-->

    <!-- MENU SIDEBAR-->
    <% include partials/sidebar %>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container">
      <!-- HEADER DESKTOP-->
      <% include partials/headerdesktop %>
      <!-- HEADER DESKTOP-->

      <!-- MAIN CONTENT-->
      <div class="main-content">
        <div class="section__content section__content--p30">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div class="overview-wrap">
                  <h2 class="title-1">Tags Manager</h2>
                </div>
              </div>
            </div>

            <div class="row m-t-25">
              <div class="col">
                <div class="card">
                  <div class="card-header">
                    Manage <strong>Tags</strong>
                  </div>
                  <div class="card-body card-block">
                    <div class="row form-group">
                      <div class="col">
                        <form action="/admin/addtag" method="POST">
                          <div class="input-group">
                            <input type="text" id="name" name="name" placeholder="Web Development" class="form-control"
                              required>
                            <div class="input-group-btn">
                              <button class="btn btn-primary" type="submit">Add</button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col">
                          <div class="mt-4 px-4">
                              <h3 class="title-3 m-b-30">current tags</h3>
                              <div class="table-responsive">
                                  <table class="table">
                                      <tbody>
                                        <% for (var i = 0; i < tags.length; i++) { %>
                                          <tr>
                                              <td><%= tags[i].name %></td>
                                              <td>
                                                <form action="/admin/deletetag" method="POST">
                                                  <input type="text" name="tagid" value="<%= tags[i]._id %>" class="d-none">
                                                  <button class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash    "></i> Delete
                                                  </button>
                                                </form>
                                              </td>
                                          </tr>
                                          <% } %>
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <% include partials/footer %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END MAIN CONTENT-->
      <!-- END PAGE CONTAINER-->
    </div>

  </div>
  <% include partials/commonscripts %>
</body>

</html>